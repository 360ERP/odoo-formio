<odoo>
    <template id="formio_builder" name="Form.io">&lt;!DOCTYPE html&gt;
    <html>
        <head>
            <title>Form.io Builder | <t t-esc="builder_name"/></title>
            <t t-call-assets="web.assets_common" t-css="false"/>

            <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css'/>
            
            <link rel='stylesheet' href='https://unpkg.com/formiojs@latest/dist/formio.full.min.css'/>
            <script src='https://unpkg.com/formiojs@latest/dist/formio.full.min.js'></script>
            
            <script type="text/javascript" src="/formio/static/src/js/odoo-formio.js"/>

            <link rel="shortcut icon" href="/web/static/src/img/favicon.ico" type="image/x-icon"/>
        </head>
        <body>
            <div class="container">
                <div class="container">            
                    <h3><small>Form.io Builder</small><small style="margin: 0 4px;"> | </small><t t-esc="builder_name"/></h3>
                </div>
                <div class="container mt16">                
                    <input type="hidden" id="builder_id" name="builder_id" t-att-value="builder_id"/>
                    <div id="formio_builder"></div>
                </div>
            </div>
        </body>
    </html>
    </template>
</odoo>
