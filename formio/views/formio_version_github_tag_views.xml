<odoo>
    <record id="view_formio_version_github_tag_tree" model="ir.ui.view">
        <field name="name">formio.version.github.tag.tree</field>
        <field name="model">formio.version.github.tag</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="formio_version_id"/>
                <field name="changelog_url" widget="url"/>
                <field name="archive_url" widget="url"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_formio_version_github_tag_form" model="ir.ui.view">
        <field name="name">formio.version.github.tag.form</field>
        <field name="model">formio.version.github.tag</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button
                        name="action_download_install" type="object" string="Download and Install"
                        attrs="{'invisible': [('formio_version_id', '!=', False)]}"
                        confirm="Are you sure to download and install? This could take some time to load, pleae be patient."
                        class="btn-primary"/>
                    <button
                        name="action_reset_installed" type="object" string="Reset (Download and Install again)"
                        attrs="{'invisible': [('formio_version_id', '=', False)]}"
                        confirm="Are you to Reset, to download and install again?"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="formio_version_id"/>
                        <field name="changelog_url" widget="url"/>
                        <field name="archive_url" widget="url"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_formio_version_github_tag" model="ir.actions.act_window">
        <field name="name">Versions GitHub tags</field>
        <field name="res_model">formio.version.github.tag</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_formio_version_github_tag_tree"/>
    </record>
</odoo>
