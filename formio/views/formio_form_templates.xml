<odoo>
    <template id="formio_form" name="Form.io">
        <html>
            <head>
                <title>Form.io form | <t t-esc="form_title"/></title>
                <link rel="shortcut icon" href="/web/static/src/img/favicon.ico" type="image/x-icon"/>
                
                <!-- Form.io (core) -->
                <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"/>
                <link rel="stylesheet" href="https://unpkg.com/formiojs@latest/dist/formio.full.min.css"/>
                <script src="https://unpkg.com/formiojs@latest/dist/formio.full.min.js"></script>

                <!-- Odoo (core) -->
                <t t-call-assets="web.assets_common" t-css="true"/>
                <t t-call-assets="web.assets_common" t-js="false"/>

                <!-- formio module -->
                <link rel="stylesheet" href="/formio/static/src/css/odoo-formio.css"/>
                <script type="text/javascript" src="/formio/static/src/js/odoo-formio-form.js"/>
            </head>
            <body class="o_connected_user">
                <nav id="oe_main_menu_navbar" class="o_main_navbar">
                    <ul class="o_menu_systray hidden-xs">
                        <li t-if="not translatable" id="edit-in-backend">
                            <a data-action="edit" href="#"><span class="fa fa-external-link"/>View in Odoo</a>
                            <!-- t-attf-href="/web#return_label=Formio&amp;view_type=form&amp;model=#{main_object._name}&amp;id=#{main_object.id}&amp;action=#{action}" -->
                        </li>
                    </ul>
                </nav>
                <div id="wrapwrap">
                    <header>
                        <div class="navbar navbar-default navbar-static-top">
                            <div class="container">
                                <div class="navbar-header">
                                    <a href="/" class="navbar-brand logo">
                                        <span t-field="res_company.logo" t-options="{'widget': 'image'}" t-att-alt="'Logo of %s' % res_company.name" t-att-title="res_company.name" />
                                    </a>
                                </div>
                                <div class="collapse navbar-collapse navbar-top-collapse">
                                    <ul class="nav navbar-nav navbar-right" id="top_menu">
                                        <li class="dropdown" t-ignore="true" t-if="not user_id._is_public()">
                                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                                <b>
                                                    <span t-esc="user_id.name[:23] + '...' if user_id.name and len(user_id.name) &gt; 25 else user_id.name"/>
                                                    <span class="caret"></span>
                                                </b>
                                            </a>
                                            <ul class="dropdown-menu js_usermenu" role="menu">
                                                <li id="o_logout"><a t-attf-href="/web/session/logout?redirect=/" role="menuitem">Logout</a></li>
                                            </ul>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </header>
                    <main>
                        <div class="container formio_form_title">
                            <div class="row">
                                <div class="col-md-12">
                                    <img id="formio-logo" width="120" src="/formio/static/src/img/formio-logo.png"/>
                                    <h3 class="formio_form_name"><t t-esc="form_title"/></h3>
                                </div>
                            </div>
                        </div>
                        
                        <div class="container form_form_container mt8">
                            <div id="formio_form"></div>
                        </div>
                        <input type="hidden" id="form_id" name="form_id" t-att-value="form_id"/>
                    </main>
                </div>
            </body>
        </html>
    </template>
</odoo>
