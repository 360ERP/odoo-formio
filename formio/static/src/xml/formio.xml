<template>
    <t t-name="FormioBuilderWidget">
        <div class="o_control_panel o_breadcrumb_full">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    Form Builders
                </li>
                <li class="breadcrumb-item active">
                    <a t-attf-href="#{widget.builder.act_window_url}">
                        <t t-esc="widget.builder.title"/>
                    </a>
                </li>
            </ol>
        </div>
        <div t-attf-class="formio_builder_container {{ widget.builder.state }}">
            <div class="row formio_header">
                <div class="col-md-6">
                    <span class="state">
                        <span >State: </span><strong><t t-esc="widget.builder.display_state"/></strong>
                    </span>
                    <span class="version">
                        <span style="margin-left: 12px;">Version: </span><strong><t t-esc="widget.builder.version"/></strong>
                    </span>
                    <span class="formio_version">
                        <span style="margin-left: 12px;">Form.io version: </span><strong><t t-esc="widget.builder.formio_version_name"/></strong>
                    </span>
                </div>
                <div class="col-md-6">
                    <span class="float-right pull-right">
                        <a t-attf-href="#{widget.builder.act_window_url}"><span class="fa fa-cog"/> Form Builder</a>
                    </span>
                </div>
            </div>
            <div class="formio_builder embed-responsive embed-responsive-21by9">
                <iframe t-attf-src="/formio/builder/embed/#{widget.builder.id}" class="embed-responsive-item"/>
            </div>
        </div>
    </t>
</template>
