<odoo>
    <record id="view_formio_version_github_importer_wizard" model="ir.ui.view">
        <field name="name">Formio Version GitHub Importer Wizard</field>
        <field name="model">formio.version.github.importer.wizard</field>
        <field name="arch" type="xml">
            <form string="Form.io Version GitHub Importer">
                <sheet>
                    <group name="version_github_tags" string="Available Versions (releases)">
                        <field name="github_tag_ids" nolabel="1">
                            <tree default_order="name desc" limit="15">
                                <field name="name"/>
                                <field name="state"/>
                                <field name="archive_url" widget="url"/>
                            </tree>
                        </field>
                    </group>
                    <div>
                        <strong>Check and register the latest 30 available Versions (releases)</strong>
                    </div>
                </sheet>
                <footer>
                    <button name="action_check_and_register_available_versions" string="Check and register available Versions" type="object" class="btn btn-primary"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
