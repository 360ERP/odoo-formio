<odoo>
    <record id="view_formio_version_github_importer_wizard" model="ir.ui.view">
        <field name="name">Formio Version GitHub Importer Wizard</field>
        <field name="model">formio.version.github.importer.wizard</field>
        <field name="arch" type="xml">
            <form string="Form.io Version GitHub Importer">
                <sheet>
                    <group name="version_github_tags" string="Releases (versions) registered">
                        <field name="github_tag_ids" nolabel="1">
                            <tree default_order="name desc" limit="15">
                                <field name="name"/>
                                <field name="state"/>
                                <field name="archive_url" widget="url"/>
                            </tree>
                        </field>
                    </group>
                    <!-- <field name="installed_version_ids"> -->
                    <!--     <tree> -->
                    <!--         <field name="name"/> -->
                    <!--     </tree> -->
                    <!-- </field> -->

                    <!-- <button string="Cancel" class="oe_link" special="cancel"/> -->
                    <div>
                        <strong>Check and import the latest 30 new Releases (versions)</strong>
                    </div>
                </sheet>
                <footer>
                    <button name="action_import_new_versions" string="Check and Import new Releases" type="object" class="btn btn-primary"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
